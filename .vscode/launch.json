{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C Debug (MinGW - Safe Paths)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\Program Files (x86)\\Dev-Cpp\\MinGW64\\bin\\gdb.exe",
            "preLaunchTask": "C Build Project",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set working directory safely (handles spaces)",
                    "text": "cd \"${fileDirname}\"",
                    "ignoreFailures": false
                }
            ]
        }
    ]
}
